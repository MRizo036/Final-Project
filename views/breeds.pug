doctype html
html(lang='en')
    head
        title Dog API
        //Bootstrap links and imports
        link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css', integrity='sha384-HSMxcRTRxnN+Bdg0JdbxYKrThecOKuH5zCYotlSAcp1+c8xmyTe9GYg1l9a69psu', crossorigin='anonymous')
        script(src='https://code.jquery.com/jquery-3.4.1.slim.min.js', integrity='sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n', crossorigin='anonymous')
        script(src='https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js', integrity='sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo', crossorigin='anonymous')
        script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js', integrity='sha384-wfSDF2E50Y2D1uUdj0O3uMBJnjuUD4Ih7YwaYd1iqfktj0Uod8GCExl3Og8ifwB6', crossorigin='anonymous')
    body
        nav.navbar.navbar-default(style = "margin: 0px;")
            .container-fluid
                // Brand and toggle get grouped for better mobile display
                .navbar-header

                    button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#bs-example-navbar-collapse-1', aria-expanded='false', style="padding: 0;")
                        span.sr-only Toggle navigation
                        span.icon-bar
                        span.icon-bar
                        span.icon-bar
            a.navbar-brand(href='#') Random APIs
            #bs-example-navbar-collapse-1.collapse.navbar-collapse(style="padding: 0;")
                ul.nav.navbar-nav(style="float:right; padding-left: 15px; padding-right: 15px;") 
                    li.active
                        a(href='/', style="background: none;")
                            | Home
                            span.sr-only (current)
                    li.active
                        a(href='/firstAPI', style="background: none;")
                            | Dog Images
                            span.sr-only (current)

                    li.active
                        a(href='/secondAPI', style="background: none;")
                            | Cat Images
                            span.sr-only (current)
                    li.active
                        a(href='/thirdAPI', style="background: none;")
                            | Fox Images
                            span.sr-only (current)  
        .container
            .row  
                h1(style="text-align: center;")=name
                .btn-group(role='group', aria-label='...', style="display: flex; justify-content: center;")
                    button.btn.btn-default(type='button' onClick='window.location.reload()' style="color: white; background-color: rgb(173, 216, 230);") New #{name}
                hr
        .container
            .row  
                each val in imgs
                    .col-sm-6.col-md-4
                        .thumbnail
                            img(src=val style="width:100%; height: 100%;")

